/* components/book/book.wxss */
.book-detail{
    width: 100%;
    height: 245px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #fff;
    margin: 20rpx 0;
}
.book-detail-img{
    width: 102px;
    height: 153px;
    box-shadow: 2px 3px 3px 0px #ddd;
}
.book-detail-title{
    font-size: 19px;
    line-height: 40px;
    letter-spacing: 1px;
}
.book-detail-author{
    font-size: 14px;
    line-height: 20px;
    color: #999;
}
.book-review{
    width: 100%;
    height:194px;
    margin:20rpx 0;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
.review-title{
    font-size: 15px;
    margin:15px 0 0 0;
}
.book-review-detail{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;
    padding: 13px;
    box-sizing: border-box;
    
}
.bubble{
    padding: 8px 14px 7px 14px;
    box-sizing: border-box;
    background: #f2f2f2;
    font-size: 12px;
    border-radius: 60rpx;
    margin:0 10px 10px 0;
    color: #666;
    
}
.bubble-zan{
    display: inline-block;
    font-size: 10px;
    color: #bbb;
}
.content-detail-intro{
    line-height: 23px;
    font-size: 14px;
    color: #666;
    padding: 0 30px;
    box-sizing: border-box;
    text-align: left;
}
.book-info-detail{
    padding: 10px;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
}
.info{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    font-size: 12px;
}
.info-left{
    color: #999;
    text-align: right;
    justify-content: flex-end;
}
.info-right{
    text-align: left;
    color: #666;
    flex: 0 0 80%;
}