/* components/classic/movie/movie.wxss */
.music-container{
    width: 100%;
}
.cover{
    width: 100%;
    height: 250px;
    display: flex;
    justify-content: center;
    align-items: center;
}
.cover-img{
    width: 210px;
    height: 210px;
}
.animate-img{
    animation: headRotate 6s linear infinite;
}
@keyframes headRotate{
    0% {transform: rotate(0deg);}
    50% {transform: rotate(180deg);}
    100% {transform: rotate(360deg);}
}
.tag{
    position: relative;
    top:-45px;
    left:15px;
    width: 30px;
    height:90px;
}
.caption{
    position: relative;
    top:-30px;
    color: #333;
    width:275px; 
    margin:0 auto;
    line-height: 1.5;
    font-size:20px;
}
.img-container{
    width: 100%;
}
.control{
    width: 60px;
    height:60px;
    position: absolute;
    top:33.5%;
    left:50%;
    transform: translate(-50%,-67%);
    cursor: pointer;
}
.control-play{
    width: 60px;
    height:60px;
    position: absolute;
    top:33%;
    left:50%;
    transform: translate(-50%,-67%);
    cursor: pointer;
}