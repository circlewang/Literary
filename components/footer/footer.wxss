/* components/footer/footer.wxss */
.book-footer{
    /* position: fixed;
    bottom: 0; */
    width: 100%;
    height: 44px;
    display: flex;
    justify-content: space-around;
    align-items: center;
    box-shadow: 0px -1px 8px 0px 
		rgba(189, 189, 189, 0.2);
}
.footer-review{
    align-items: center;
    border:1px solid #000;
    border-radius: 14px;
    width: 203px;
    height: 28px;
    padding-left: 16px;
}
.icon-edit{
    width: 12px;
    height: 12px;
    margin-right: 3px;
}
.edit-title{
    font-size: 12px;
    line-height: 20px;
}
.right{
    text-align: right;
}
.share-container{
    margin-left:20px; 
    width: 14px;
    height:14px;
    padding: 1px;
    box-sizing: border-box;
}
.like{
    width: 16px;
    height:14px;
    padding: 1px;
    box-sizing: border-box;
}
.like-num{
    font-size:20rpx;
    color: #999;
    line-height: 20rpx;
    position: relative;
    left: 6rpx;
    bottom: 15rpx;
}