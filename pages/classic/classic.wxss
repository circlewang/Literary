/* pages/classic.wxss */

.container{
    width: 100%;
    
}
.header{
    width: 100%;
    height:50px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 10rpx 30rpx;
    box-sizing: border-box;
}

.right{
    text-align: right;
}
.share-container{
    margin-left:20px; 
    width: 14px;
    height:14px;
    padding: 1px;
    box-sizing: border-box;
}
.like{
    width: 16px;
    height:14px;
    padding: 1px;
    box-sizing: border-box;
}
.like-num{
    font-size:20rpx;
    color: #999;
    line-height: 20rpx;
    position: relative;
    left: 6rpx;
    bottom: 15rpx;
}
.content{
    display: flex;
    flex-direction: column;
    padding-bottom: 40rpx;
    box-sizing: border-box;
}

